<%= render 'shared/header' %>
<% provide(:title, 'Order') %>

<div class="container">
<form action="<%= new_order_path %>" method="POST">

<div class="jumbotron" style="margin-top: 10%; margin-bottom: 10%;">
	<legend class="ms-legend">Select how many meals you want</legend>
	<h2 class="text-center" style="margin-top: 3%; margin-bottom: 5%;">Pick up to 30 meals</h2>
	
	<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

			<input id="ex8" class="slider" data-slider-id='ex1Slider' type="text" data-slider-min="8" data-slider-max="30" data-slider-step="2" data-slider-value="8" name="quantity"/>
			<h1 class = "text-center" id="ex6SliderVal">8</h1>

			<input style="margin-top: 5%;" type="submit" class="btn btn-lg btn-info submit center-block" />
			<script>
			$("#ex8").slider({tooltip: 'hide'})
			$("#ex8").on("slide", function(slideEvt) {
			$("#ex6SliderVal").text(slideEvt.value);
			});
			</script>
			</div>

			<div class="col-md-2"></div>
	</div>
		
	

</div>

</form>

</div>

<%= render 'shared/footer' %>