<div class="container food-container">
	<h1 id="plan-title">The South Asian Cuisine Meal Plan</h1>
	<div class="row portfolio-item-food food-top">
		<div class="col-md-4">
				<%= image_tag("biryani.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
				<h4 class="text-center">Biryani (Chicken, Beef, Vegetarian)</h4>
		</div>

		<div class="col-md-4">
				<%= image_tag("chickencurry.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
				<h4 class="text-center">Curry Chicken</h4>
		</div>

		<div class="col-md-4">
				<%= image_tag("chickentikka.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
				<h4 class="text-center">Chicken Tikka</h4>
		</div>
	</div>

	<div class="row portfolio-item-food">
		<div class="col-md-4">
			<%= image_tag("gingerchicken.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
				<h4 class="text-center">Ginger Chicken</h4>
		</div>

		<div class="col-md-4">
			<%= image_tag("lahorifriedfish.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
					<h4 class="text-center">Lahori Fried Fish</h4>
		</div>

		<div class="col-md-4">
			<%= image_tag("lambcurry.jpg", alt: "food1", class: "img-responsive food img-thumbnail center-block") %>
					<h4 class="text-center">Lamb Curry</h4>
		</div>
	</div>

	<button type="button" class="btn btn-primary btn-lg center-block order-button" data-toggle="modal" data-target="#basicModal">Order the South Asian Cuisine Meal Plan</button>

	<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-bg">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
            <h4 class="modal-title" id="myModalLabel">Order the South Asian Cuisine Meal Plan</h4>
            </div>
            <div class="modal-body">
                <%= render 'form', modal: true %>
            </div>
            
            <div class="modal-footer">
            	
            	<p class="text-left" style="color:green">&ast;Once you submit your order, one of our representatives will contact you in 24 hours to setup the appointment</p>
				
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        </div>
	    </div>
	  </div>
	</div>

</div>

<%= render 'shared/footer' %>


