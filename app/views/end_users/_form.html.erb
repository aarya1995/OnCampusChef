<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(@user, remote: remote, html: {role: :form, 'data-model' => 'end_user'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label' %><br>
    <%= f.text_field :email, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <p style="font-weight: bold" class="control-label">Phone Number<p>
    <%= f.text_field :phonenumber, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :address, class: 'control-label' %><br>
    <%= f.text_field :address, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
     <p style="font-weight: bold" class="control-label">Select up to four meal options from the menu<p>
     <%= f.text_area :mealplan, size: '50x3', class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <%# Added Bootstrap classes %>
  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-default' %>
  </div>
  
<% end %>
