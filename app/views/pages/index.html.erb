<%= render 'shared/slicknavbar' %>

    <!-- Hero Banner
    ================================================== -->
    <div id="intro-video" style="background-image: url( '/assets/chinese-food.jpg' ); background-repeat: no-repeat; background-size: cover; background-position: center center;">

      <a class="player" data-property="{videoURL:'https://www.youtube.com/watch?v=fwFnAtJhK9I',containment:'#intro-video',autoPlay:true, mute:true, startAt:0, printUrl:false,showControls:false, opacity:1, quality: 'highres'}"></a>
        <div class="item">
          <div class="container">
            <div class="row">
              <div class="carousel-caption-center colour-white">
                
                <h1>Redefining Your Meals On Campus</h1>
                <p>We prepare your meals at your place. Your Kitchen, Our Chef.</p>

                <% if signed_in? %>

                    <p><a class="btn btn-lg btn-primary scroll" href="/static_pages/chefs" role="button">Menu</a></p>


                <% else %>

                    <%= link_to('Get Started', new_customer_session_path, class: 'btn btn-lg btn-primary scroll', role: 'button')  %>

                <% end %>

              </div>
            </div>
          </div>
          <div class="overlay-bg"></div>
        </div>
    </div>



    <!-- About Section
    ================================================== -->
    <section id="about" class="content text-center light">

      <div class="container">
        <!-- Three columns of text below the carousel -->
        <div class="row">
          <div class="col-lg-12 overlay-text">
            <h2>Simple Steps</h2>
          </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->

        <div class="row">
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <div class="icon-wrapper">
             <i class="fa fa-search icon-large"></i>
            </div>
            <h3>Sign Up</h3>
            <p>Create an account on our website and access our delicious meal plans</p>
          </div> </a>
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <div class="icon-wrapper">
              <i class="fa fa-shopping-cart icon-large"></i>
            </div>
            <h3>Order</h3>
            <p>Choose a meal plan for the week and submit an order</p>
          </div> </a>
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <div class="icon-wrapper">
              <i class="fa fa-home icon-large"></i>
            </div>
            <h3>Relax</h3>
            <p>We deliver your groceries and send your chef right to your door!</p>
          </div> </a>
        </div><!-- /.row -->
      </div>

      <div class="overlay-bg light"></div>

    </section>


    <!-- Featured Sections
    ================================================== -->
    <section id="featured1" class="dark with-bg">

      <div class="container">
        <div class="row">
          <div class="col-sm-7 overlay-text">
            <div class="vertical-align">
              <p style = "font-size: 1.5em;">Oncampuschef is a service that brings gourmet personal chef services to the college students at an affordable price. We believe that students should eat healthy delicious food that they want with power to choose their dishes every week.</p>
            </div>

            <p><a class="btn btn-lg btn-info" href="/static_pages/chefs" role="button">View the Menu</a></p>
          </div>
		
          <div class="col-sm-5">
			

			<!--
            <iframe width="420" height="315" src="//www.youtube.com/embed/tTvJpC_l_QM" frameborder="0" allowfullscreen class="center-block"></iframe> -->

          </div>
		
        </div>
      </div>

      <div class="overlay-bg"></div>

    </section>


    <!-- Testimonials
    ================================================== -->
    <section id="testimonials" class="dark">

      <div class="page-header text-center">
        <h3>Testimonials</h3>
        <h2>Our Clients Love Us</h2>
      </div>

      <div class="container">

        <div class='row'>
          <div class='col-md-offset-2 col-md-8'>
             <blockquote>
                    <div class="row">
                      <div class="col-sm-3 text-center">
                        <img class="img-circle" src="/assets/steve_pic.jpg">
                      </div>
                      <div class="col-sm-9">
                        <p>"I save a lot of time not worrying about cooking. Best part is, I eat healthier and end up saving money using OnCampusChef!"</p>
                        <small>Steve Jettoo -  <a class="icon" href="https://www.facebook.com/steven.jettoo?fref=ts" target="_blank"><i class="fa fa-facebook fa-2x"></i></a></small>
                      </div>
                    </div>
              </blockquote>                        
          </div>
        </div>
        </div>
      </div>

    </section>


    <section id="pricing" class="featured" style="background-color: #eee;">

      <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>What are you waiting for?</h3>

                    <% if signed_in? %>
                      <a href= "/static_pages/chefs" class="btn btn-lg btn-light">Order Now</a>
                    <% else %>
                     <%= link_to('Sign Up Today!', new_customer_session_path, class: 'btn btn-lg btn-light', role: 'button')  %>
                    <a href="/consultations/new" class="btn btn-lg btn-dark">Get a Free Consultation!</a>
                    <% end %>
                </div>
            </div>
        </div>

    </section>

