
<% provide(:title, 'Home') %>

<script src="/assets/modernizr.custom.js"></script>

<%= render 'shared/slicknavbar' %>

    <!-- Hero Banner
    ================================================== -->
    <div id="intro-video" style="background-image: url( '/assets/wecook-bg.jpg' ); background-repeat: no-repeat; background-size: cover; background-position: center center;">

        <div class="item">
          <div class="container">
            <div class="row">
              <div class="carousel-caption-center colour-white">
                
                <h1>Connecting people who share an interest in quality meals</h1>
                <h3>Your Kitchen, Our Chef.</h3>

                <% if signed_in? %>

                    <p><a class="btn btn-lg btn-primary scroll" href="/food_objects/menu" role="button">Menu</a></p>


                <% else %>

                    <%= link_to('Get Started', new_customer_session_path, class: 'btn btn-lg btn-primary scroll', role: 'button')  %>

                <% end %>

              </div>
            </div>
          </div>
          <div class="overlay-bg"></div>
        </div>
    </div>



    <!-- About Section
    ================================================== -->
    <section id="about" class="content text-center light">

      <div class="container">
        <!-- Three columns of text below the carousel -->
        <div class="row">
          <div class="col-lg-12 overlay-text">
            <h2>Three Step Process</h2>
          </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->

        <div class="row">
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <img src="/assets/PotGraphicBase.png" class="wecook-graphic"/>
            <h3>Explore</h3>
            <p>Create an account and browse through a diverse menu of healthy, gourmet meals.</p>
          </div> </a>
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <img src="/assets/calendarlogo.png" class="wecook-graphic"/>
            <h3>Order</h3>
            <p>Pick up to three of your favorite meals and pay through our secure checkout system.</p>
          </div> </a>
          <a href="static_pages/about" style="text-decoration:none; color: black;">
          <div class="col-sm-4 text-center overlay-text icons">
            <img src="/assets/clocklogo.png" class="wecook-graphic"/>
            <h3>Relax</h3>
            <p>We deliver the groceries and appoint you your own personal chef. The chef will meet with you on appointment and bulk prepare ten meals for your enjoyment.</p>
          </div> </a>
        </div><!-- /.row -->
      </div>

      <div class="overlay-bg light"></div>

    </section>


    <!-- Featured Sections
    ================================================== -->
    <section id="featured1" class="dark with-bg">

      <div class="container">
        <div class="row">
          <img src="/assets/Infographic1.png" class="center-block img-responsive infographic"/>
		
        </div>
      </div>

      <!--<div class="overlay-bg"></div>-->

    </section>


    <section id="pricing" class="featured" style="background-color: #eee;">

      <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>What are you waiting for?</h3>

                    <% if signed_in? %>
                      <a href= "/food_objects/menu" class="btn btn-lg btn-primary">Order Now</a>
                    <% else %>
                     <%= link_to('Sign Up Today!', new_customer_session_path, class: 'btn btn-lg btn-light', role: 'button')  %>
                    <a href="/consultations/new" class="btn btn-lg btn-dark">Get a Free Consultation!</a>
                    <% end %>
                </div>
            </div>
        </div>

    </section>

    <!-- Footer
    ================================================== -->
    <%= render 'shared/footer' %>

    <script src="/assets/classie.js"></script>
    <script src="/assets/cbpAnimatedHeader.min.js"></script>
    <script src="/assets/jquery.mb.YTPlayer.js"></script>
    <script src="/assets/owl.carousel.min.js"></script>
    <script src="/assets/scrollReveal.js"></script>
    <script src="/assets/imagesloaded.pkgd.min.js" defer="defer"></script>
    <script src="/assets/jquery.scrollTo.js" defer="defer"></script>
    <script src="/assets/jquery.nav.js" defer="defer"></script>
    <script src="/assets/jquery.magnific-popup.min.js" defer="defer"></script>
    <script src="/assets/jqBootstrapValidation.js" defer="defer"></script>
    <script src="/assets/zcustom.js"></script>

    <script>

      $(document).ready(function(){
        $(".player").mb_YTPlayer();
      });

    </script>
